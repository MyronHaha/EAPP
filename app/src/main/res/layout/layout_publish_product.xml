                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv2"
                    android:background="@null"
                    android:hint="请输入产品名称"
                    android:paddingLeft="29dp" />
            </RelativeLayout>

            <View
