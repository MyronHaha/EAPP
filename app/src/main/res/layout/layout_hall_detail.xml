<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:t1="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="222dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/id_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="13dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:maxHeight="16dp"
                android:maxWidth="9dp"
                android:src="@mipmap/icon_fanhui" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="展厅详情"
                android:textColor="@android:color/white" />
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="59dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:maxHeight="45dp"
                android:maxWidth="45dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/img_head" />

            <TextView
                android:id="@+id/tv_company"
                style="@style/white_tx_inbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="合壹汇供应链管理有限公司" />

            <TextView
                android:id="@+id/tv_count"
                style="@style/white_tx_inbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="招商产品（56）"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_count"
                android:layout_marginTop="40dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_dh_w" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_tag"
                        android:text="展厅电话" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_guanzhu1" />

                    <TextView
                        android:id="@+id/tv_focus"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_tag1"
                        android:text="关注" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
    <View
        android:id="@+id/v"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/page_bg"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab"
        tl:tl_indicator_gravity="BOTTOM"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        t1:tl_indicator_height="3dp"
        t1:tl_indicator_margin_top="-10dp"
        t1:tl_tab_space_equal="true"
        t1:tl_textsize="17sp"
        tl:tl_indicator_color="#3db0ff"
        tl:tl_indicator_width="16dp"
        tl:tl_textSelectColor="#3db0ff"
        tl:tl_textUnselectColor="#66000000" />
    <View
        android:layout_marginTop="3dp"
        android:id="@+id/v2"
        android:layout_below="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/page_bg"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2" />

</RelativeLayout>