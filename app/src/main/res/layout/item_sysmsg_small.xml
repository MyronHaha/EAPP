<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/bgmargin15"
    android:layout_marginLeft="@dimen/bgmargin13"
    android:layout_marginRight="@dimen/bgmargin13"
    android:layout_marginBottom="@dimen/bgmargin15"
    android:background="@drawable/bg_dialog">

    <TextView
        android:layout_toLeftOf="@+id/iv"
        android:id="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bgmargin15"
        android:layout_marginTop="@dimen/bgmargin15"
        android:textSize="17sp"
        android:textColor="#4d4d4d"
        android:text="标题biaotibiaotifsdjklfskdf" />
    <TextView
        android:paddingBottom="15dp"
        android:layout_below="@id/title"
        android:textSize="13sp"
        android:textColor="#939393"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bgmargin15"
        android:layout_marginTop="@dimen/bgmargin13"
        android:text="10.23" />
    <ImageView
        android:id="@+id/iv"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@mipmap/img_nothingbg2"/>

</RelativeLayout>