<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/devider"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_yc_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="19dp"
            android:layout_alignBaseline="@id/iv_user"
            android:layout_toRightOf="@id/iv_user"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user"
                style="@style/dt_tx_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="用户名" />

            <TextView
                android:id="@+id/tv_ago"
                style="@style/dt_tx_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user"
                android:layout_toRightOf="@id/iv_user"
                android:text="2小时前" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">

            <TextView
                style="@style/dt_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                  android:id="@+id/tv_liulan"
                android:layout_toRightOf="@+id/iv_liulan"
                android:text="12" />

            <ImageView
                android:id="@+id/iv_liulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="19dp"
                android:src="@mipmap/icon_liulan" />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_liulan"
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_delete" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/dt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top1"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="17dp"
        android:text="求购xxxxxxxxxxxxxxx" />
    <TextView
        android:id="@+id/tv_content"
        style="@style/account_light_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="58dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="19dp"

        android:text="这里是内容好多好多这里是内容好多好多这里是内容好多好多这里是内容好多好多" />
<View
    android:layout_below="@id/tv_content"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/page_bg"/>
</RelativeLayout>