<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<RelativeLayout
    android:layout_marginLeft="@dimen/x16"
    android:layout_marginRight="@dimen/x16"
    android:layout_below="@id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/d8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y16"
        android:background="@color/page_bg" />
    <!--1-->
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d8"
        android:background="@color/white"
        android:paddingBottom="@dimen/y34"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x24"
        android:paddingTop="@dimen/y34">

        <EditText
            style="@style/dt_reply"
            android:inputType="textPassword"
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入旧密码" />

    </RelativeLayout>

    <View
        android:id="@+id/d2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_below="@id/r1"
        android:background="@color/page_bg" />
    <!--1-->
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d2"
        android:background="@color/white"
        android:paddingBottom="@dimen/y34"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x24"
        android:paddingTop="@dimen/y34">

        <EditText
            style="@style/dt_reply"
            android:inputType="textPassword"
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入新密码,包含数字和字母,不少于8位" />
        <TextView
            android:alpha="0.6"
            android:layout_marginTop="@dimen/y16"
            android:id="@+id/tv_check"
            android:visibility="gone"
            android:padding="@dimen/x6"
            android:textSize="@dimen/x22"
            android:textColor="@color/Color_Red"
            android:layout_marginBottom="@dimen/y10"
            android:layout_below="@id/et2"
            android:text="格式错误，应该包含字母和数字，不少于八位"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/d3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_below="@id/r2"
        android:background="@color/page_bg" />
    <!--1-->
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d3"
        android:background="@color/white"
        android:paddingBottom="@dimen/y34"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x24"
        android:paddingTop="@dimen/y34">

        <EditText
            style="@style/dt_reply"
            android:inputType="textPassword"
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="再次确认新密码" />
        <TextView
            android:alpha="0.6"
            android:layout_marginTop="@dimen/y16"
            android:id="@+id/tv_check2"
            android:visibility="gone"
            android:padding="@dimen/x6"
            android:textSize="@dimen/x22"
            android:textColor="@color/Color_Red"
            android:layout_marginBottom="@dimen/y10"
            android:layout_below="@id/et3"
            android:text="格式错误，应该包含字母和数字，不少于八位!"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:clickable="true"
        style="@style/tx_forget"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/y34"
        android:layout_below="@id/r3"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_forget"
        android:text="忘记密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/d4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_below="@id/r1"
        android:background="@color/page_bg" />
</RelativeLayout>



    <Button
        android:id="@+id/bt_change"
        style="@style/bt_cp_text"
        android:text="确认修改"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_bg_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>