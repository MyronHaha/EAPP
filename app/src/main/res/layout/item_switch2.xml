<RelativeLayout android:layout_width="match_parent"
    android:padding="@dimen/x24"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:text="nisdjfl;adjflkaskkni你好按这个聚隆科技了多少街坊邻居李经理借两块不知道为了什么你在哪里contentjsdklfjsladjflkajfdskjl jljkld "
        android:ellipsize="end"
        android:id="@+id/tv_content"
        android:textSize="@dimen/x28"
        android:textColor="#333333"
        android:layout_width="@dimen/x559"
        android:layout_height="wrap_content"
        />
    <TextView
    android:id="@+id/iv_huore"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@mipmap/icon_huore"
    android:visibility="visible"
    />
<RelativeLayout
    android:layout_below="@+id/tv_content"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/y24"
        android:id="@+id/rv_areas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
    android:text="3小时前"
    android:id="@+id/tv_ago"
    android:textColor="#999999"
    android:textSize="@dimen/x22"
    android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>

