<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/head"
            layout="@layout/layout_toolbar" />

        <RelativeLayout
            android:id="@+id/rl_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y40"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:layout_marginTop="@dimen/y40">

                <TextView
                    android:id="@+id/title"
                    style="@style/news_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="类型" />

                <TextView
                    android:id="@+id/seltype"
                    style="@style/account_light_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="可多选" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top"
                android:layout_marginBottom="@dimen/y40"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginRight="@dimen/x26" />

            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:layout_below="@id/gv"
                android:background="@color/page_bg" />

            <RelativeLayout
                android:id="@+id/top2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v"
                android:layout_marginBottom="@dimen/y40"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:layout_marginTop="@dimen/y40">

                <TextView
                    android:id="@+id/title2"
                    style="@style/news_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="渠道" />

                <TextView
                    android:id="@+id/seltype2"
                    style="@style/account_light_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="可多选" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/gv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/top2"
                android:layout_marginBottom="@dimen/y40"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginRight="@dimen/x26" />

            <View
                android:id="@+id/v8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:layout_below="@id/gv2"
                android:background="@color/page_bg" />

        </RelativeLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y16"
            android:layout_below="@+id/rl_choose"
            android:background="@color/page_bg" />
        <!--r1-->
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_below="@id/v1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x24">

            <TextView
                style="@style/setting_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="常驻地" />

            <ImageView
                android:id="@+id/right4"
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y26"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_r" />

            <TextView
                android:id="@+id/tv_base"
                style="@style/my_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x26"
                android:layout_toLeftOf="@+id/right4"
                android:text="广东  广州  番禺" />
        </RelativeLayout>

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_below="@id/r1"
            android:background="@color/page_bg" />
        <!--r2-->
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:layout_marginBottom="@dimen/y76"
            android:layout_marginTop="@dimen/y26"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x24">

            <TextView
                android:id="@id/title2"
                style="@style/setting_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:text="熟悉的科室" />

            <ImageView
                android:id="@+id/right2"
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y26"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:src="@mipmap/icon_arrow_r" />

            <TextView
                android:maxEms="12"
                android:id="@+id/tv_room"
                style="@style/my_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/x26"
                android:layout_toLeftOf="@+id/right2"
                android:text="6" />
        </RelativeLayout>

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y16"
            android:layout_below="@id/r2"
            android:background="@color/page_bg" />
        <!--r3-->
        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y92"
            android:layout_below="@id/v3"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x24">

            <TextView
                style="@style/setting_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="代理区域" />

            <!--<ImageView-->
                <!--android:id="@+id/right5"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:src="@mipmap/icon_arrow_r" />-->

            <!--<TextView-->
                <!--style="@style/my_menu2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="13dp"-->
                <!--android:layout_toLeftOf="@+id/right5"-->
                <!--android:text="可多选" />-->
        </RelativeLayout>

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_below="@id/r3"
            android:background="@color/page_bg" />
        <!--r4-->
        <RelativeLayout
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v4"

            android:background="@color/white"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x26">

            <TextView
                android:paddingBottom="@dimen/y38"
                android:paddingTop="@dimen/y26"
                style="@style/my_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="代理的省份（省代）" />

            <ImageView
                android:paddingBottom="@dimen/y38"
                android:paddingTop="@dimen/y26"
                android:id="@+id/right6"
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y26"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_r" />

            <TextView
                android:layout_alignBaseline="@+id/right6"
                android:paddingBottom="@dimen/y38"
                android:paddingTop="@dimen/x26"
                android:id="@+id/province"
                style="@style/my_menu2"
                android:maxEms="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x26"
                android:layout_toLeftOf="@+id/right6"
                android:text="未选择" />
        </RelativeLayout>

        <!--r5-->
        <RelativeLayout
            android:id="@+id/r5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r4"

            android:background="@color/white"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x24">

            <TextView
                android:id="@+id/title7"
                android:paddingBottom="@dimen/y38"
                style="@style/my_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="代理的城市（市代）" />

            <ImageView
                android:paddingBottom="@dimen/y38"
                android:id="@+id/right7"
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y26"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_r" />

            <TextView
                android:paddingBottom="@dimen/y38"
                android:id="@+id/city"
                style="@style/my_menu2"
                android:maxLines="5"
                android:maxEms="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x26"
                android:layout_toLeftOf="@+id/right7"
                android:text="5" />
        </RelativeLayout>
        <!--r6-->
        <RelativeLayout
            android:id="@+id/r6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r5"

            android:background="@color/white"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x24">

            <TextView
                android:paddingBottom="@dimen/y38"
                style="@style/my_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="代理的医院（代理）" />

            <ImageView
                android:paddingBottom="@dimen/y38"
                android:id="@+id/right8"
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y26"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_r" />

            <TextView
                android:paddingBottom="@dimen/y38"
                android:id="@+id/tv_hos"
                style="@style/my_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x26"
                android:layout_toLeftOf="@+id/right8"
                android:text="2" />
        </RelativeLayout>
        <!--r7-->
        <RelativeLayout
            android:id="@+id/r7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r6"
            android:background="@color/white"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x24">

            <TextView
                android:paddingBottom="@dimen/y28"

                style="@style/my_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="代理的医院（上量）" />

            <ImageView
                android:paddingBottom="@dimen/y28"

                android:id="@+id/right9"
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y26"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_r" />

            <TextView
                android:paddingBottom="@dimen/y28"

                android:id="@+id/tv_hos2"

                style="@style/my_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x26"
                android:layout_toLeftOf="@+id/right9"
                android:text="未选择" />
        </RelativeLayout>

        <View
            android:id="@+id/v5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y16"
            android:layout_below="@id/r7"
            android:background="@color/page_bg" />
        <!--r7-->
        <RelativeLayout
            android:id="@+id/r8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v5"
            android:paddingBottom="@dimen/y28"
            android:paddingTop="@dimen/y28"
            android:background="@color/white"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x24">

            <TextView

                style="@style/my_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="优势" />


        </RelativeLayout>

        <View
            android:id="@+id/v6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_below="@id/r8"
            android:background="@color/page_bg" />
        <!--r8-->
        <RelativeLayout
            android:id="@+id/r9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y174"
            android:layout_below="@id/v6"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y40"
            android:background="@drawable/shape_tag_grey"
            android:paddingLeft="@dimen/x28"
            android:paddingRight="@dimen/x24">

            <EditText
                android:id="@+id/et"
                style="@style/tag_input_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请填写标签关键词,每个词最多不超过4个字,关键词之间用空格隔开。"
                android:lineSpacingExtra="@dimen/x6" />

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:text="确定"
                android:textColor="@drawable/selector_tx_blue"
                android:textSize="@dimen/x26" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r9"
            android:layout_marginBottom="@dimen/y40"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y16"
            android:layout_above="@+id/bt_change"
            android:background="@color/page_bg" />

        <Button
            android:id="@+id/bt_change"
            style="@style/bt_cp_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rv"
            android:background="@drawable/selector_bg_blue"
            android:text="保存" />
    </RelativeLayout>
</ScrollView>