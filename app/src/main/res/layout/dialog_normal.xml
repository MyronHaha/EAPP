<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x375"
    android:background="@drawable/dw_white_round"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    xmlns:hyphenate="http://schemas.android.com/tools">
    <TextView
        android:lineSpacingExtra="@dimen/x10"
        android:layout_weight="2"
        style="@style/news_tx"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_alert"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160" />
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/y2"
     android:background="@color/devider"/>
    <LinearLayout
        android:orientation="horizontal"
      android:layout_gravity="bottom"
        android:gravity="center_horizontal|bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">
        <TextView
            android:textColor="@drawable/selector_btn_tx"
            android:paddingRight="@dimen/x10"
            android:gravity="center"
            android:id="@+id/cancel"
            android:text="取消"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/devider"
            android:layout_width="@dimen/y2"
            android:layout_height="match_parent" />
        <TextView
            android:background="@drawable/selector_button_focus_red"
            android:textColor="@color/white"
            android:paddingRight="@dimen/x10"
            android:gravity="center"
            android:id="@+id/prompt"
            android:text="确认"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>