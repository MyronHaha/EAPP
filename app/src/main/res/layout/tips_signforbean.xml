<?xml version="1.0" encoding="utf-8"?>
<!--00cccccc-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#00cccccc"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="@dimen/x566"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/y34"
            android:src="@mipmap/icon_guanbiy"
            android:layout_width="@dimen/x56"
            android:layout_height="@dimen/y56" />
    </FrameLayout>
    <LinearLayout
        android:paddingBottom="@dimen/y47"
        android:id="@+id/ll_content"
        android:background="@drawable/dw_white_round10"
        android:orientation="vertical"
        android:layout_width="@dimen/x566"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="@dimen/y32"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100">
            <ImageView
                android:backgroundTint="#f6c02c"
                android:background="@drawable/dw_white_round10_top"
                android:src="@mipmap/img_qiangdao"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/y34"
                android:gravity="center"
                android:id="@+id/tv_title"
                android:text="签到成功"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <ImageView
            android:layout_marginBottom="@dimen/y34"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_jindou3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_signresult"
            android:layout_marginBottom="@dimen/y10"
            android:gravity="center_horizontal"
            android:textSize="@dimen/x37"
            android:textColor="@color/bg_yel_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>