<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/head"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <android.support.v7.widget.Toolbar
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:id="@+id/id_tool_bar"
            android:background="?attr/colorPrimary">
            <ImageView
                android:gravity="center_vertical"
                android:id="@+id/iv_back"
                android:maxWidth="9dp"
                android:maxHeight="16dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:src="@mipmap/icon_fanhui" />
            <TextView
                android:gravity="center"
                style="@style/toolbar_text"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:text="@string/app_name"/>
            <ImageView
                android:gravity="center_vertical"
                android:src="@mipmap/icon_fabu"
                android:paddingRight="20dp"
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <View
        app:layout_constraintTop_toBottomOf="@id/head"
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/page_bg"/>
    <RelativeLayout
        android:id="@+id/top1"
        app:layout_constraintTop_toBottomOf="@id/d1"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="5dp"
            style="@style/tx_username"
            android:id="@+id/area"
            android:text="地区"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/iv1"
            android:src="@mipmap/icon_xiala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/area"
            android:layout_toEndOf="@+id/area" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="27dp"
            style="@style/my_menu2"
            android:id="@+id/tv_area"
            android:text="全部"
            android:layout_toRightOf="@id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_marginRight="5dp"
            style="@style/tx_username"
            android:id="@+id/type"
            android:text="类别"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_area"/>
        <ImageView
            android:id="@+id/iv2"
            android:src="@mipmap/icon_xiala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/type"
            android:layout_toEndOf="@+id/type" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            style="@style/my_menu2"
            android:id="@+id/tv_leibie"
            android:text="全部"
            android:layout_toRightOf="@id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/rv"
        app:layout_constraintTop_toBottomOf="@id/top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>
