<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hyphenate="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <include
        layout="@layout/item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x26"
        android:layout_marginRight="@dimen/x26"
        android:background="@drawable/catrgory_item_bg">

        <LinearLayout
            android:id="@+id/item_left"
            android:layout_width="@dimen/x348"
            android:layout_height="@dimen/y452"
            android:orientation="vertical">

            <include
                android:id="@+id/item1"
                layout="@layout/product_item_mid" />

            <include
                android:id="@+id/item4"
                layout="@layout/product_item_mid" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/right_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_left">

            <View
                android:layout_width="@dimen/y2"
                android:layout_height="@dimen/y224"
                android:layout_centerInParent="true"
                android:background="@color/page_bg" />

            <include
                android:id="@+id/item2"
                layout="@layout/product_item_small" />

            <include
                android:id="@+id/item3"
                layout="@layout/product_item_small"
                android:layout_width="@dimen/x174"
                android:layout_height="@dimen/y225"
                android:layout_toRightOf="@+id/item2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/right_top"
            android:layout_toRightOf="@id/item_left">

            <View
                android:layout_width="@dimen/y2"
                android:layout_height="@dimen/y224"
                android:layout_centerInParent="true"
                android:background="@color/page_bg" />

            <include
                android:id="@+id/item5"
                layout="@layout/product_item_small" />

            <include
                android:id="@+id/item6"
                layout="@layout/product_item_small"
                android:layout_width="@dimen/x174"
                android:layout_height="@dimen/y225"
                android:layout_toRightOf="@+id/item5" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/y2"
            android:layout_height="@dimen/y452"
            android:layout_centerInParent="true"
            android:background="@color/page_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_centerInParent="true"
            android:background="@color/devider1" />
    </RelativeLayout>


</RelativeLayout>