<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg"
>

    <RelativeLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/fl_img"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y70"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y30">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/y38"
            android:layout_toRightOf="@id/fl_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user"
                style="@style/dt_tx_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y10"
               />

            <TextView
                android:id="@+id/tv_ago"
                style="@style/dt_tx_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user"
                android:layout_toRightOf="@id/iv_user"
              />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/y30"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_delete" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        style="@style/dt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top1"
        android:background="@color/white"
        android:paddingBottom="@dimen/y30"
        android:paddingLeft="@dimen/x116"
        android:paddingRight="@dimen/x34"
     />
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/y2"
    android:layout_alignParentBottom="true"
    android:background="@color/devider"/>
</RelativeLayout>