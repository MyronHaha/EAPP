<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#90FFFFFF">
    <!--android:gravity="bottom|center_horizontal"1.2 1.2 1.2-->
    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="@dimen/x490"
        android:layout_height="@dimen/y491"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y80"
        android:src="@mipmap/img_mffb_bg" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_top"
        android:layout_marginTop="@dimen/y84"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:onClick="show1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x98"
            android:layout_marginRight="@dimen/x93"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x115"
                android:layout_height="@dimen/y115"
                android:layout_gravity="left|center_vertical"
                android:src="@mipmap/icon_qgxq_y" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x29"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="求购"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布你想要找的产品，能帮你快速找到它哦"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/x22" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/y51"
            android:onClick="show2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x98"
            android:layout_marginRight="@dimen/x93"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x115"
                android:layout_height="@dimen/y115"
                android:layout_gravity="left|center_vertical"
                android:src="@mipmap/icon_zsxq_y" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x29"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="代理"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布你终端资源招商需求，能帮你获取好产品/厂家"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/x22" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/y51"
            android:onClick="show3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x98"
            android:layout_marginRight="@dimen/x93"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x115"
                android:layout_height="@dimen/y115"
                android:layout_gravity="left|center_vertical"
                android:src="@mipmap/icon_fbzs" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x29"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="招商"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布你的产品信息，能帮你快速进行产品招商"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/x22" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:gravity="center_horizontal"
    android:clickable="true"
    android:id="@+id/close"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/y84"
    android:layout_below="@+id/ll"
    android:layout_width="@dimen/x50"
    android:layout_height="@dimen/y50">
    <ImageView
        android:scaleType="fitXY"
       android:layout_gravity="center"
        android:layout_width="@dimen/x29"
        android:layout_height="@dimen/y29"
        android:src="@mipmap/icon_cha_hui" />
</LinearLayout>

    <!--</LinearLayout>-->

</RelativeLayout>
