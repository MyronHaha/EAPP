<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    xmlns:hyphenate="http://schemas.android.com/tools">
<include layout="@layout/layout_toolbar"/>
    <LinearLayout
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_phone"
            android:textSize="@dimen/bgmargin15"
            android:textColor="@color/tx_primary"
            android:paddingTop="@dimen/bgmargin10"
            android:paddingBottom="@dimen/bgmargin8"
            android:paddingLeft="@dimen/bgmargin13"
            android:drawableLeft="@mipmap/icon_shouji_lan"
            android:drawablePadding="@dimen/bgmargin5"
            android:layout_marginTop="@dimen/bgmargin17"
            android:layout_marginLeft="@dimen/bgmargin10"
            android:layout_marginRight="@dimen/bgmargin10"
            android:background="@drawable/round_shape4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"/>

        <Button
            android:id="@+id/bt_bind"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@drawable/selector_btn_white_tx_"
            android:text="确认"
            android:layout_marginLeft="@dimen/bgmargin10"
            android:layout_marginRight="@dimen/bgmargin10"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_bg_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>