<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96">

        <android.support.v7.widget.Toolbar
            android:id="@+id/id_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="@dimen/x10"
                    android:clickable="true"
                    android:padding="@dimen/x4">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/x18"
                        android:layout_height="@dimen/x36"
                        android:src="@mipmap/icon_fanhui" />
                </LinearLayout>

                <EditText
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/y56"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_tag_grey"
                    android:drawableRight="@mipmap/icon_sousuo"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="left"
                    android:hint="输入关键词"
                    android:paddingBottom="@dimen/y12"
                    android:paddingLeft="@dimen/x14"
                    android:paddingRight="@dimen/x16"
                    android:paddingTop="@dimen/y12"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/x26" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/x10"
                    android:clickable="true"
                    android:padding="@dimen/x4">

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="@dimen/x36"
                        android:layout_height="@dimen/y36"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/x28"
                        android:src="@mipmap/icon_fabu" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </FrameLayout>

    <View
        android:id="@+id/d1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y16"
        android:background="@color/page_bg" />

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y30"
        android:paddingLeft="@dimen/x30"
        android:paddingTop="@dimen/y30">


        <LinearLayout
            android:id="@+id/rl3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rl1"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lastest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:gravity="center_vertical"
                android:text="最新"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x32" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:src="@mipmap/icon_xiala2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:text="地区"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x32" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:src="@mipmap/icon_xiala2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rl1"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:gravity="center_vertical"
                android:text="类别"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x32" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:src="@mipmap/icon_xiala2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rl1"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x10"
                android:gravity="center_vertical"
                android:text="筛选"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x32" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:src="@mipmap/icon_xiala2" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/d2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/page_bg" />

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:background="@color/color_white"
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
