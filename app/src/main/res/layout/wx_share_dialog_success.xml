<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hyphenate="http://schemas.android.com/tools"
    android:layout_width="@dimen/x634"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/cancel"
        android:layout_width="@dimen/x56"
        android:layout_height="@dimen/y56"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/y34"
        android:src="@mipmap/icon_guanbiy" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_round_top_blue"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/y36"
        android:paddingTop="@dimen/y36">

        <TextView
            android:gravity="center"
            style="@style/login_white_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/x8"
            android:drawableRight="@mipmap/icon_wancheng"
            android:drawableTint="@color/white"
            android:text="发布成功" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#e3e3e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_round_bottom_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y42">

        <TextView
            style="@style/hebi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y54"
            android:text="分享此条内容" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/y59"
            android:layout_marginTop="@dimen/y55"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/fri_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x60"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x82"
                    android:layout_height="@dimen/y68"
                    android:src="@mipmap/icon64_wx_friend" />

                <TextView
                    style="@style/tab_tx_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y16"
                    android:text="微信好友" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zoom_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x60"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x68"
                    android:layout_height="@dimen/y68"
                    android:src="@mipmap/icon_zoom_line" />

                <TextView
                    style="@style/tab_tx_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y17"
                    android:text="朋友圈" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:gravity="left"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x26"
            style="@style/tx_share_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/y11"
            android:text="分享可快速提高信息的影响力，助您快速解决问题，还可获得免费置顶一次或6e金豆。" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginTop="@dimen/y54"
            android:background="@color/devider" />

        <ImageView
            android:id="@+id/iv_adv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/y191"
            android:maxWidth="@dimen/x554"
            android:src="@mipmap/img_yc_bg" />

    </LinearLayout>


</LinearLayout>