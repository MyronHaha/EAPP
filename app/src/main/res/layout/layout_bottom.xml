<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:gravity="bottom">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y4"
        android:layout_above="@+id/ll_bottom"
        android:src="@drawable/shadow" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y36"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y14"
                android:layout_marginTop="@dimen/y20"
                android:src="@mipmap/tab_home_click" />

            <TextView
                android:id="@+id/tv_1"
                style="@style/bottom_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1"
                android:layout_centerHorizontal="true"
                android:text="e链"
                android:textColor="#4ea4dc" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/y48"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y12"
                android:src="@mipmap/tab_yxq" />

            <TextView
                android:id="@+id/tv_2"
                style="@style/bottom_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv2"
                android:layout_centerHorizontal="true"
                android:text="医械圈" />

            <TextView

                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y2"
                android:background="@mipmap/em_unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x22"
                android:visibility="invisible" />
            <!--<TextView-->
            <!--android:id="@+id/unread_msg_number"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="1dp"-->
            <!--android:background="@mipmap/em_unread_count_bg"-->
            <!--android:gravity="center"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="12sp"-->
            <!--android:visibility="invisible" />-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="@dimen/x136"
            android:layout_height="@dimen/y144"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/x136"
                android:layout_height="@dimen/y136"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y16" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/y48"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y12"
                android:src="@mipmap/tab_yfx" />

            <TextView
                android:id="@+id/tv_4"
                style="@style/bottom_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv4"
                android:layout_centerHorizontal="true"
                android:text="e发现" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl5"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/y48"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y12"

                android:src="@mipmap/tab_my" />

            <TextView
                android:id="@+id/tv_5"
                style="@style/bottom_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv5"
                android:layout_centerHorizontal="true"
                android:text="我的" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>