<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:layout_marginTop="35dp"
        android:drawablePadding="14dp"
        android:drawableTop="@mipmap/icon_yrz1"
        android:text="状态" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_state"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="right|center_vertical">

            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="145dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginRight="19dp"
                android:layout_weight="1"
                android:gravity="right"
                android:src="@mipmap/img_grrz" />

            <ImageView
                android:id="@+id/iv_s_person"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/iv_person"
                android:layout_alignEnd="@+id/iv_person"
                android:layout_alignRight="@+id/iv_person"
                android:adjustViewBounds="true"
                android:maxHeight="45dp"
                android:maxWidth="45dp"
                android:src="@mipmap/icon_yrz2"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="left|center_vertical">


            <ImageView
                android:id="@+id/iv_company"
                android:layout_width="145dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_marginLeft="19dp"
                android:layout_weight="1"
                android:gravity="left"
                android:src="@mipmap/img_qyrz" />

            <ImageView
                android:id="@+id/iv_s_company"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/iv_company"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:maxHeight="45dp"
                android:maxWidth="45dp"
                android:src="@mipmap/icon_yrz2"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="50dp"
        android:text="注：同一个账号只能选择一种认证方式" />


