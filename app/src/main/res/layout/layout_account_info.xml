<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/d8"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/toolbar"
        android:background="@color/page_bg" />
    <!--1-->
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d8"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_centerVertical="true"
            style="@style/setting_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/account_light_tx"
            android:background="@null"
          android:layout_marginLeft="49dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv1"/>
    </RelativeLayout>

    <View
        android:id="@+id/d2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/r1"
        android:background="@color/page_bg" />
    <!--2-->
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d2"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">


        <TextView
            android:id="@+id/tv2"
            android:layout_centerVertical="true"
            style="@style/setting_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="用户名" />
        <EditText
            android:layout_centerVertical="true"
            style="@style/account_light_tx"
            android:layout_marginLeft="49dp"
            android:layout_toRightOf="@id/tv2"
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>

    </RelativeLayout>

    <View
        android:id="@+id/d3"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/r2"
        android:background="@color/page_bg" />
    <!--touxiang-->
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d3"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">
        <TextView
            android:layout_marginRight="64dp"
            android:id="@+id/tv3"
            android:layout_centerVertical="true"
            style="@style/setting_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="头像" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv3"
            android:id="@+id/iv_user"
            android:maxWidth="45dp"
            android:maxHeight="45dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_head"/>
        <TextView
            style="@style/account_light_tx"
            android:id="@+id/submit_photo"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="上传头像" />
    </RelativeLayout>
    <View
        android:id="@+id/d4"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/r3"
        android:background="@color/page_bg" />
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d4"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">


        <TextView
            android:id="@+id/tv5"
            android:layout_centerVertical="true"
            style="@style/setting_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="邮箱" />
        <EditText
            android:layout_centerVertical="true"
            style="@style/account_light_tx"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@id/tv5"
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>

    </RelativeLayout>
    <View
        android:id="@+id/d5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/r4"
        android:background="@color/page_bg" />
    <RelativeLayout
        android:id="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_below="@id/d5"
        android:background="@color/white"
        android:paddingLeft="14dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">


        <TextView
            android:id="@+id/tv6"
            style="@style/setting_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="地址" />
        <EditText
            android:layout_alignBaseline="@id/tv6"
            style="@style/account_light_tx"
            android:layout_marginLeft="64dp"
            android:layout_toRightOf="@id/tv6"
            android:id="@+id/et4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>
    </RelativeLayout>
    <View
        android:id="@+id/d6"
        android:layout_below="@id/r5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/page_bg"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d6"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <RadioGroup
            android:gravity="center_vertical"
            android:id="@+id/check_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/ck1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="厂家"
                android:textColor="#808080"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/ck2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="经销商"
                android:textColor="#808080"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/ck3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="代理商"
                android:textColor="#808080"
                android:textSize="17sp" />
        </RadioGroup>
    </RelativeLayout>
    <Button
        android:id="@+id/bt_change"
        style="@style/bt_cp_text"
        android:text="确认"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_bg_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>